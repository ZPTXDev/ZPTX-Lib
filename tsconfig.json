{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "./src",
		"outDir": "./dist",
		"typeRoots": ["./types", "node_modules/@types"],
		"target": "ES2022",
		"module": "ES2022",
		"allowJs": true,
		"alwaysStrict": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"moduleResolution": "Node16",
		"skipLibCheck": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"declaration": true
	},
	"include": ["src/**/*", "types/index.d.ts"]
}
