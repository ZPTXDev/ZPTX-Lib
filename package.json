{
  "name": "@zptxdev/zptx-lib",
  "version": "1.1.1-next.1",
  "type": "module",
  "description": "Library for ZPTX projects, containing shared functions used across all projects",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZPTXDev/ZPTX-Lib.git"
  },
  "keywords": [
    "utility",
    "functions",
    "reusable",
    "shared",
    "library",
    "ZPTX"
  ],
  "author": "ZPTXDev",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ZPTXDev/ZPTX-Lib/issues"
  },
  "homepage": "https://github.com/ZPTXDev/ZPTX-Lib#readme",
  "release": {
    "tagFormat": "${version}",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.62.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.2",
    "typescript": "^4.9.5"
  }
}
